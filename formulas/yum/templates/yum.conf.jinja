# This file is managed by Salt. Manual changes will be overwritten.
{% set config = salt['pillar.get']('yum:config', {}) %}
[main]
cachedir=/var/cache/yum/$basearch/$releasever
keepcache=0
debuglevel=2
logfile=/var/log/yum.log
exactarch=1
obsoletes=1
gpgcheck=1
plugins=1
installonly_limit=5
exclude={{' '.join(config.get('exclude', []))}}
